<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
						xmlns:s="library://ns.adobe.com/flex/spark" 
						xmlns:view="org.understandinguncertainty.UKPDS.view.*" 
						xmlns:components="org.understandinguncertainty.UKPDS.components.*" 
						xmlns:mx="library://ns.adobe.com/flex/mx"
>

	<fx:Metadata> 
		[Event(name="complete", type="flash.events.Event")] 
		[Event(name="clicked", type="flash.events.MouseEvent")] 
	</fx:Metadata> 
	
	<fx:Script>
		<![CDATA[
			import org.understandinguncertainty.personal.signals.ClearInterventionsSignal;
					
			[Bindable]
			public var conversionFactor:Number = 1;
						
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->			
	</fx:Declarations>
	
	<s:HGroup id="labelGroup" gap="0" paddingTop="15" verticalAlign="middle">
		
		<s:Group width="20"/>
		
		<s:Label id="title" 
				 text="Interventions" fontSize="16" />
		
	</s:HGroup>
	
	<s:VGroup id="container" gap="8" paddingLeft="20" paddingRight="20" paddingTop="30" paddingBottom="15" horizontalAlign="right">
			
		<s:Group height="10"/>
		
		<s:VGroup gap="2" width="100%" horizontalAlign="left">
			<s:Label text="@Resource(bundle='UKPDS', key='sideBar2.futureSmokingCategory')" />
			<mx:ComboBox id="futureSmokingCategory" width="155" selectedIndex="0" rowCount="5"/>
		</s:VGroup>
		
		<components:InterventionStepper
			id="hba1c" 
			label="@Resource(bundle='UKPDS', key='sideBar2.hba1c')" 
			width="100%"
			height="50"
			fixed="2"
			stepSize="0.01"
			/>
		
		<components:InterventionStepper
			id="sbp" 
			label="@Resource(bundle='UKPDS', key='sideBar2.SBP')" 
			width="100%"
			height="50"
			/>
		
		<components:TotalInterventionStepper 
			id="totalCholesterol" 
			label="@Resource(bundle='UKPDS', key='sideBar2.totalCholesterol')"
			hdlChol="{hdlCholesterol.value}"
			width="100%"
			height="50"
			/>

		<components:HDLInterventionStepper
			id="hdlCholesterol"
			totalChol="{totalCholesterol.value}"
			label="@Resource(bundle='UKPDS', key='sideBar2.hdlCholesterol')"
			width="100%"
			height="50"
			/>

		<components:InterventionStepper
			id="weight_kg"
			label="@Resource(bundle='UKPDS', key='sideBar2.weight')"
			width="100%"
			height="50"
			/>
		
		<components:InterventionStepper
			id="minsActivityPerWeek"
			label="@Resource(bundle='UKPDS', key='sideBar2.minsActivityPerWeek')"
			width="100%"
			height="50"
			/>
		
		<s:Label id="nonHDLField"/>
		<s:Label id="bmiField"/>

		<s:Button id="resetButton" label="Reset"/>
		

	</s:VGroup>
			
		
</s:VGroup>
